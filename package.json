{
  "name": "voice-bot-backend",
  "version": "1.0.0",
  "description": "Kunal Singh Voice Bot Backend - A conversational AI that embodies Kunal's persona using OpenAI API",
  "main": "dist/app.js",
  "scripts": {
    "start": "node dist/app.js",
    "build": "tsc",
    "vercel-build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "dev:watch": "ts-node-dev --respawn --transpile-only --watch src src/app.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "form-data": "^4.0.0",
    "helmet": "^7.1.0",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.20.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/multer": "^1.4.8",
    "@types/node": "^20.8.7",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "@vercel/node": "^5.3.6",
    "eslint": "^8.52.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "keywords": [
    "voice-bot",
    "chatbot",
    "openai",
    "gpt-4",
    "speech-to-text",
    "text-to-speech",
    "ai",
    "conversational-ai",
    "persona-bot"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "license": "MIT",
  "author": "Kunal Singh Voice Bot"
}
